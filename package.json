{
  "name": "atlcli",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "bun run --cwd apps/cli src/index.ts",
    "build": "bun run --cwd apps/cli build",
    "lint": "echo 'no lint configured'",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "version:core": "npm version --no-git-tag-version -w @atlcli/core -w @atlcli/confluence",
    "version:cli": "npm version --no-git-tag-version -w @atlcli/cli"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/turndown": "^5.0.6",
    "bun-types": "^1.3.5"
  }
}
